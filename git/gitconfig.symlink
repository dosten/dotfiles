[branch]
  autosetuprebase = always

[color]
  ui = auto

[core]
  autocrlf = input
  excludesfile = ~/.gitignore

[credential]
  helper = cache --timeout=604800

[fetch]
  prune = true

[help]
  autocorrect = 1

[pager]
  diff = "diff-so-fancy | less --tabs=4 -RFX"
  show = "diff-so-fancy | less --tabs=4 -RFX"

[pull]
  rebase = true

[push]
  default = current

[rebase]
  autosquash = true
