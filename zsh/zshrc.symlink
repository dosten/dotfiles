DOT=$HOME/.dotfiles
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="jreese"

declare -U config_files
config_files=($DOT/**/*.zsh)

# load the path files
for file in ${(M)config_files:#*/path.zsh}
do
  source $file
done

# load everything but the path files
for file in ${config_files:#*/path.zsh}
do
  source $file
done

source $ZSH/oh-my-zsh.sh

unset config_files
