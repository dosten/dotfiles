[branch]
  autosetuprebase = always

[color]
  ui = auto

[core]
  autocrlf = input
  excludesfile = ~/.gitignore

[credential]
  helper = cache --timeout=604800

[fetch]
  prune = true

[help]
  autocorrect = 1

[pull]
  rebase = true

[push]
  default = current

[rebase]
  autosquash = true

[user]
  email = diego@saintesteben.me
  name = Diego Saint Esteben

[url "git@github.com:"]
  insteadOf = https://github.com/
